x = 0
y = 0
def setup():
    size(500,500)
    textSize(50)
def draw():
    global x
    square(50,50,50)
    text(x,250,250)
def mouseClicked():
    global x
    if mouseX > 50 and mouseY > 50 and mouseX < 50+50 and mouseY < 50+50:
        global y
        x+=1
        y+=1
        background(y,0,0)
